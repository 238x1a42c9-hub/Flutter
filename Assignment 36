Question 2: Your employer has asked you to create an animated text feature that transforms its appearance when a user hovers over it.
source code:
import 'package:flutter/material.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: HoverTextPage(),
    );
  }
}

class HoverTextPage extends StatefulWidget {
  @override
  _HoverTextPageState createState() => _HoverTextPageState();
}

class _HoverTextPageState extends State<HoverTextPage> {
  bool _isHovered = false;

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(title: Text("Animated Hover Text")),
      body: Center(
        child: MouseRegion(
          onEnter: (_) {
            setState(() {
              _isHovered = true;
            });
          },
          onExit: (_) {
            setState(() {
              _isHovered = false;
            });
          },
          child: AnimatedDefaultTextStyle(
            duration: Duration(milliseconds: 300),
            style: TextStyle(
              fontSize: _isHovered ? 36 : 24,
              color: _isHovered ? Colors.blue : Colors.black,
              fontWeight: _isHovered ? FontWeight.bold : FontWeight.normal,
              letterSpacing: _isHovered ? 2 : 0,
            ),
            child: Text("Hover over me!"),
          ),
        ),
      ),
    );
  }
}
