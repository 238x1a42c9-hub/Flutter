Question 07: Build a Flutter application where pressing a button will change the color of all text widgets within the application.  
source code:
import 'package:flutter/material.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatefulWidget {
  @override
  _MyAppState createState() => _MyAppState();
}

class _MyAppState extends State<MyApp> {
  // Initial color of text
  Color textColor = Colors.black;

  // Function to change color
  void changeTextColor() {
    setState(() {
      // Change to a random color
      textColor = textColor == Colors.black ? Colors.blue : Colors.black;
    });
  }

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      title: 'Change Text Color',
      debugShowCheckedModeBanner: false,
      home: Scaffold(
        appBar: AppBar(
          title: Text('Change Text Color Example'),
        ),
        body: Center(
          child: Column(
            mainAxisAlignment: MainAxisAlignment.center,
            children: [
              Text(
                'Hello, Flutter!',
                style: TextStyle(fontSize: 24, color: textColor),
              ),
              SizedBox(height: 20),
              Text(
                'Press the button to change my color!',
                style: TextStyle(fontSize: 20, color: textColor),
              ),
              SizedBox(height: 40),
              ElevatedButton(
                onPressed: changeTextColor,
                child: Text('Change Text Color'),
              ),
            ],
          ),
        ),
      ),
    );
  }
}
