Question 10: Create a Flutter application using Riverpod state management where pressing a button changes the background color of the appBar and Scaffold, as well as plays one of 10 music notes. 
source code:
import 'dart:math';
import 'package:flutter/material.dart';
import 'package:flutter_riverpod/flutter_riverpod.dart';
import 'package:audioplayers/audioplayers.dart';

void main() {
  runApp(
    ProviderScope(
      child: MyApp(),
    ),
  );
}

// Provider for background color state
final colorProvider = StateProvider<Color>((ref) => Colors.blue);

// Provider for AudioPlayer
final audioPlayerProvider = Provider<AudioPlayer>((ref) => AudioPlayer());

class MyApp extends ConsumerWidget {
  @override
  Widget build(BuildContext context, WidgetRef ref) {
    final bgColor = ref.watch(colorProvider);

    return MaterialApp(
      debugShowCheckedModeBanner: false,
      home: Scaffold(
        backgroundColor: bgColor,
        appBar: AppBar(
          backgroundColor: bgColor,
          title: Text('Music Notes & Color Change'),
        ),
        body: Center(
          child: ElevatedButton(
            onPressed: () async {
              // Change background color randomly
              final newColor = Colors.primaries[Random().nextInt(Colors.primaries.length)];
              ref.read(colorProvider.notifier).state = newColor;

              // Play random note (1 to 10)
              int noteNumber = Random().nextInt(10) + 1;
              final player = ref.read(audioPlayerProvider);
              await player.play(AssetSource('note$noteNumber.wav'));
            },
            child: Text('Change Color & Play Note'),
          ),
        ),
      ),
    );
  }
}
